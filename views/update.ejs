<%- include('header') -%>
<div id="main-content">
    <h2>Edit Record</h2>
    <form class="post-form" action="/findStudent" method="post">
        <div class="form-group">
            <label>Id</label>
            <input type="text" name="sid" />
        </div>
        <input class="submit" type="submit" name="showbtn" value="Show" />
    </form>
    <form class="post-form" action="/updatedata" method="post">
        <div class="form-group">
            <label for="">Name</label>
            <input type="hidden" name="sid"  value="<%= data._id %>" />
            <input type="text" name="sname" value="<%= data.name %>" />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="semail" value="<%= data.email %>" />
      </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" name="saddress" value="<%= data.address %>" />
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="text" name="sphone" value="<%= data.phone %>" />
        </div>
    <input class="submit" type="submit" value="Update"  />
    </form>
</div>
</div>
</body>
</html>
